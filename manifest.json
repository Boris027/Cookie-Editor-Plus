{
  "manifest_version": 3,
  "name": "CookiesEditor+",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons":{
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "description": "Allows you to manage, delete, update, copy and clear cookies.",
  "permissions": [
    "cookies",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background":{
    "service_worker":"background.js"
  }
}